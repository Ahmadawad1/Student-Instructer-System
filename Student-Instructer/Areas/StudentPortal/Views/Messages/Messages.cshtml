
@{
    Layout = "~/Areas/StudentPortal/Views/Shared/MasterView.cshtml";
    ViewBag.Title = "Messages";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/Images/icons/favicon.ico" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
</head><br />
<br />
<h2 style="color:#EB4E01;font-family:Britannic">Customizing a Message</h2>
<br />
@using (Html.BeginForm("Messages", "Messages", FormMethod.Post))
{
<div style="display:inline-flex">
<select class="form-control" name="Course">
    <option>Select Course</option>
    @foreach (var i in ViewBag.Crs)
    {
    <option>@i</option>}
</select>&nbsp;&nbsp;&nbsp;
<select class="form-control" name="Instructer">
    <option>Select Instructer</option>
    @foreach (var i in ViewBag.Ins)
    {
        <option>@i</option>}
</select>

    </div><br /><br />
    <br />
<input type="text"  style="width:500px;height:50px;"  class="form-control mr-sm-2" name="MSG"  placeholder="Write your Message..."/><br />

<button type="submit" class="btn btn-primary" name="Send">Send</button>
}
<br />
@if (ViewBag.E == "Message was sent successfully")
{ <h3 style="color:forestgreen;font-family:Britannic">@ViewBag.E</h3>}
else
{
<h3 style="color:red;font-family:Britannic">@ViewBag.E</h3>}
<br /><br />

