@model DAL.REG_STD
@{
    Layout = "~/Areas/StudentPortal/Views/Shared/MasterView.cshtml";
    ViewBag.Title = "Registration System";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/Images/icons/favicon.ico" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
</head>
<style>
    .li{
        margin-right:25px;cursor:pointer;transition:ease 0.5s;color:#db6b1c;font-size:20px;border-bottom:#db7227 solid 1px;
    }
    .li:hover{
        font-weight:bold;border-bottom:#db7227 solid 3px;color:#db7227;
    }
</style>
<br />
<ul style="display:inline-flex;margin-left:70px;">
    <li>@Html.ActionLink("Registration System","RegSystem","Registration",new { @class= "li" })</li>
    <li>@Html.ActionLink("Drop a Course", "Drop", "Registration", new { @class = "li" })</li>
    <li>@Html.ActionLink("Closed Courses", "Closed", "Registration", new { @class = "li" })</li>
</ul><br /><br /><br />
 @if (Model.STD.Count == 0)
 {
    <h3 style="color:#EB4E01;font-family:Britannic">
        No Registered Courses!
    </h3>}
 else
 {
    <h3 style="color:#EB4E01;font-family:Britannic"> My Courses</h3>
 }
<br />
<table class="table table-bordered  table-hover " style="background-color:#e2dbd6;" id="tbl">
    <tr>
      
        <th>Course ID</th>
        <th>Course</th>
        <th>Hall</th>
        <th>Instructer</th>
        <th>Time</th>
        <th>Day</th>
    </tr>

    @foreach (var i in Model.STD)
            {
        <tr>

            <td>@i.CourseID</td>
            <td>@i.Course</td>
            <td>@i.Hall</td>
            <td>@i.Instructer</td>
            <td>@i.Time</td>
            <td>@i.Day</td>
        </tr>
    }

</table>
@if (Model.STD.Count > 0)
{
    int c = 0;
    foreach (var i in Model.STD)
    {
        if (i.CourseID.ToString().Substring(0, 1) == "1") { c++; }
        else if (i.CourseID.ToString().Substring(0, 1) == "2") { c += 2; }
        else if (i.CourseID.ToString().Substring(0, 1) == "3") { c += 3; }
    }
    <h4 style="color:#EB4E01;font-family:Britannic">Total Hours : @c</h4>


}
else
{
    <style>
        #tbl {
            display: none;
        }
       
    </style>
}




